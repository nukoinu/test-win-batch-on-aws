# Windows Server Core 2022 ベース
FROM mcr.microsoft.com/windows/nanoserver:ltsc2022

# 作業ディレクトリを設定
WORKDIR C:\\app

# EXEファイルをコンテナにコピー
# ビルドコンテキスト内の test-executables ディレクトリからコピーする
COPY test-executables\\countdown.exe C:\\app\\
COPY test-executables\\countdown-i18n.exe C:\\app\\

# 国際化ファイルもコピー
COPY i18n\\ C:\\app\\i18n\\

# デフォルトコマンド（10秒カウントダウン）
CMD ["countdown.exe", "10"]
